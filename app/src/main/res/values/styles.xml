<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorAccent">@color/secondary_color</item>
        <item name="colorPrimaryDark">@color/secondary_color</item>
    </style>

    <style name="PSPDFSimple.Theme" parent="PSPDFKit.Theme.Default">
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryDark">@color/secondary_color</item>
        <item name="colorAccent">@color/secondary_color</item>
        <item name="colorSecondary">@color/secondary_color_dark</item>
        <item name="colorOnSecondary">@color/white</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionModeOverlay">true</item>

        <item name="alertDialogTheme">@style/PSPDFKit.AlertDialog</item>
        <item name="pspdf__mainToolbarStyle">@style/PSPDFSimple.Theme.MainToolbarStyle</item>
        <item name="pspdf__actionBarIconsStyle">@style/PSPDFSimple.Theme.ActionBarIconsStyle</item>
        <item name="pspdf__settingsModePickerItemStyle">@style/PSPDFSimple.Theme.SettingsModePickerItemStyle</item>
    </style>

    <style name="PSPDFSimple.Theme.MainToolbarStyle">
        <item name="pspdf__backgroundColor">?colorPrimary</item>
        <item name="pspdf__textColor">@color/white</item>
        <item name="pspdf__toolbarTheme">@style/ThemeOverlay.AppCompat.ActionBar</item>
        <item name="pspdf__toolbarPopupTheme">@style/PSPDFSimple.Theme.ToolbarPopupTheme</item>
    </style>

    <style name="PSPDFSimple.Theme.ToolbarPopupTheme" parent="@style/PSPDFKit.ToolbarPopupTheme">
        <item name="android:colorBackground">@color/secondary_color</item>
    </style>

    <style name="PSPDFSimple.Theme.ActionBarIconsStyle">
        <item name="pspdf__iconsColor">@color/white</item>
        <item name="pspdf__iconsColorActivated">@color/white_50</item>
    </style>

    <style name="PSPDFSimple.Theme.SettingsModePickerItemStyle">
        <item name="pspdf__itemTint">@color/white</item>
    </style>

    <style name="PSPDFSimple.Theme.Dark" parent="PSPDFKit.Theme.Dark">
        <item name="colorPrimary">@color/primary_color_dark</item>
        <item name="colorPrimaryDark">@color/secondary_color_dark</item>
        <item name="colorAccent">@color/fab_gray</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionModeOverlay">true</item>

        <item name="alertDialogTheme">@style/PSPDFSimple.AlertDialog.Dark</item>
        <item name="pspdf__contextualToolbarStyle">@style/PSPDFKit.ContextualToolbar.Dark</item>
        <item name="pspdf__actionBarIconsStyle">@style/PSPDFSimple.ActionBarIcons.Dark</item>
        <item name="pspdf__mainToolbarStyle">@style/PSPDFSimple.Theme.MainToolbarStyle.Dark</item>
        <item name="pspdf__settingsModePickerItemStyle">@style/PSPDFSimple.Theme.SettingsModePickerItemStyle.Dark</item>
        <item name="pspdf_fabIconColor">@color/black</item>
        <item name="pspdf__sharingDialogStyle">@style/PSPDFSimple.SharingDialog.Dark</item>
        <item name="pspdf__settingsDialogStyle">@style/PSPDFSimple.SettingsDialog.Dark</item>
        <item name="pspdf__popupToolbarStyle">@style/PSPDFSimple.PopupToolbar.Dark</item>
    </style>

    <style name="PSPDFSimple.AlertDialog.Dark" parent="PSPDFKit.AlertDialog">
        <item name="android:colorBackground">?colorPrimary</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="PSPDFSimple.ActionBarIcons.Dark" parent="PSPDFKit.ActionBarIcons">
        <item name="pspdf__iconsColor">@color/white</item>
        <item name="pspdf__iconsColorActivated">@color/gray</item>
    </style>

    <style name="PSPDFSimple.Theme.MainToolbarStyle.Dark" parent="PSPDFKit.MainToolbar.Dark">
        <item name="pspdf__backgroundColor">@color/dark</item>
        <item name="pspdf__textColor">@color/white</item>

        <item name="pspdf__toolbarTheme">@style/ThemeOverlay.AppCompat.ActionBar</item>
        <item name="pspdf__toolbarPopupTheme">@style/PSPDFSimple.Theme.ToolbarPopupTheme.Dark</item>
    </style>

    <style name="PSPDFSimple.Theme.SettingsModePickerItemStyle.Dark">
        <item name="pspdf__itemTint">@color/white</item>
    </style>

    <style name="PSPDFSimple.PopupToolbar.Dark" parent="PSPDFKit.PopupToolbar.Dark">
        <item name="pspdf__backgroundColor">@color/dark</item>
        <item name="pspdf__itemTint">@color/white</item>
        <item name="pspdf__itemTintDisabled">@color/gray_light</item>
    </style>

    <style name="PSPDFSimple.Theme.ToolbarPopupTheme.Dark" parent="@style/PSPDFKit.ToolbarPopupTheme">
        <item name="android:colorBackground">@color/secondary_color_dark</item>
    </style>

    <style name="PSPDFSimple.SharingDialog.Dark" parent="ThemeOverlay.AppCompat">
        <item name="pspdf__backgroundColor">?colorPrimary</item>
        <item name="pspdf__errorColor">@color/red</item>
        <item name="android:colorBackground">?colorPrimary</item>
        <item name="android:colorForeground">@color/white</item>
    </style>

    <style name="PSPDFSimple.SettingsDialog.Dark" parent="PSPDFKit.SettingsDialog.Dark">
        <item name="colorPrimary">@color/blue_darkmode</item>
        <item name="colorAccent">@color/blue_darkmode</item>
        <item name="android:colorBackground">@color/black</item>
        <item name="pspdf__settings_unselected_color">@color/grey_70</item>
    </style>
</resources>
